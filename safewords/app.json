{
  "expo": {
    "name": "SafeWords",
    "slug": "safewords",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SafeWords needs your location to send accurate emergency alerts",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SafeWords needs your location to track your position during emergencies",
        "UIBackgroundModes": ["location", "fetch"]
      },
      "bundleIdentifier": "com.yourcompany.safewords"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.SEND_SMS",
        "android.permission.READ_PHONE_STATE"
      ],
      "package": "com.yourcompany.safewords"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-location"
    ]
  }
}
